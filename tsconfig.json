{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"],
      "@static/*": ["static/*"],
      "@styles/*": ["styles/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "noImplicitThis": true,
    "strictNullChecks": false
  },
  "include": [
    "./src/**/**/*"
  ],
  "exclude": [
    "./config/*"
  ]
}
